# input will come from buttons and an input field
# all output for the game will be printed in the console
import math
import simplegui
import random


# helper function to start and restart the game
def new_game():
    global number
    number = random.randrange(0,100)
    global i
    i=7
    print "the range is 0-100"
    print "you have " + str(i) + " chances"
    
    


# define event handlers for control panel
def range100():
    # button that changes the range to [0,100) and starts a new game 
    global number
    global i
    i=7
    number = random.randrange(0,100)
    print "the range is 0-100"
    print "you have " + str(i) + "chances"
    
def range1000():
    # button that changes the range to (0,1000) and starts a new game     
    global number
    global i
    i=7
    number = random.randrange(0,1000)
    print "the range is 0-1000"
    print "you have " + str(i) + "chances"
    
    
def input_guess(guess):
    global number
    global i
    guess = int (guess)
    
    i=i-1

    if(i==0):
        print "fail"
        new_game()
    elif (guess<number):
        print "higher" 
        if(i==1):
            print "you just have 1 chance"
        else:
            print "you still have " + str(i) +" chances"
    elif (guess>number):
        print "lower"
        if(i==1):
            print "you just have 1 chance"
        else:
            print "you still have " + str(i) +" chances"
    elif(guess==number):
            print "you are correct dude!!!"
            new_game()
    
# create frame
frame=simplegui.create_frame("guess number",200,200)
frame.add_input("input here", input_guess,100)
frame.add_button("0-100",range100,100)
frame.add_button("0-1000",range1000,100)                              

# register event handlers for control elements and start frame
frame.start()

# call new_game 
new_game()
